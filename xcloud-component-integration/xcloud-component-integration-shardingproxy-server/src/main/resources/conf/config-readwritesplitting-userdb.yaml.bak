rules:
 - !READWRITE_SPLITTING
  dataSources:
    userdb_g1db0:
      writeDataSourceName: userdb_g1db0
      readDataSourceNames:
        - userdb_g1db1
        - userdb_g1db2
      loadBalancerName: randomBalancer1
    userdb_g1db1:
      writeDataSourceName: userdb_g1db1
      readDataSourceNames:
        - userdb_g1db1
        - userdb_g1db2
      loadBalancerName: randomBalancer1
    userdb_g1db2:
      writeDataSourceName: userdb_g1db2
      readDataSourceNames:
        - userdb_g1db1
        - userdb_g1db2
      loadBalancerName: randomBalancer1
    userdb_g1db0:
      writeDataSourceName: userdb_g1db0
      readDataSourceNames:
        - userdb_g1db1
        - userdb_g1db2
      loadBalancerName: randomBalancer1
  loadBalancers:
    randomBalancer1:
      type: RANDOM

#################################### DB Group1 #########################################
 - !SHARDING
  tables: # Tables definitions.
    #SCHEMATA: # information_schema.SCHEMATA
    #  actualDataNodes: userdb_g1db0_schema.SCHEMATA
    #  tableStrategy:
    #    standard:
    #      shardingColumn: SCHEMA_NAME
    #      shardingAlgorithmName: schemeta_inline
    t_user:
      actualDataNodes: userdb_g1db${0..2}.t_user_${0..2}
      #actualDataNodes: 'userdb_g1db0.t_user_${0..3},userdb_g1db1.t_user_${0..2},userdb_g1db2.t_user_${0..2},userdb_g1db${0..2}.t_user_${0..2}'
      #databaseStrategy:
      tableStrategy:
        standard:
          shardingColumn: id
          shardingAlgorithmName: t_user_inline
      keyGenerateStrategy:
        column: id
        keyGeneratorName: snowflake
  bindingTables:
    - t_user
  defaultDatabaseStrategy:
    standard:
      shardingColumn: id
      #shardingAlgorithmName: database_inline
      #shardingAlgorithmName: database_volume_range
      shardingAlgorithmName: composite_smart_mod1
  defaultTableStrategy:
  shardingAlgorithms:
    composite_smart_mod1:
      type: SMART_MOD
      props:
        # Modular expression of all sharding (dbs/tables).
        sharding-mod-assign-expression: '_g1db0->0,1,2,3|_g1db1->4,5,6|_g1db2->7,8,9'
    #database_boundary_range: # see:org.apache.shardingsphere.sharding.algorithm.sharding.range.BoundaryBasedRangeShardingAlgorithm
    #  type: BOUNDARY_RANGE
    #  props:
    #    sharding-ranges:
    #database_volume_range: # see:org.apache.shardingsphere.sharding.algorithm.sharding.range.VolumeBasedRangeShardingAlgorithm
    #  type: VOLUME_RANGE
    #  props: # Must use quotation marks(string) or you cannot get them.
    #    range-lower: '0'
    #    range-upper: '20000000'
    #    sharding-volume: '10000000'
    #database_inline:
    #  type: INLINE
    #  props:
    #    algorithm-expression: userdb_g${(id / 40000000) as int}db0
    t_user_inline:
      type: INLINE
      props:
        algorithmExpression: t_user_${(id % 4) as int}
    #schemeta_inline:
    #  type: INLINE
    #  props:
    #    algorithmExpression: SCHAMETA
  keyGenerators:
    snowflake:
      type: SNOWFLAKE
      props:
        worker-id: '1001'
